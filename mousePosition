import pyautogui
import keyboard
import time


# Initial position
last_position = pyautogui.position()

while True:
    # Current position
    current_position = pyautogui.position()

    # If position has changed, print it
    if current_position != last_position:
        print(f"The current position of the mouse is at {current_position}")
        last_position = current_position

    # If 'q' is pressed, break the loop
    if keyboard.is_pressed('q'):
        print('You pressed q, the loop is stopping.')
        break

    # Small delay to reduce CPU usage
    time.sleep(0.1)
    
    # 515, 571 username
    # 526, 623 email
